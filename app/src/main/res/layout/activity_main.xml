<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etMaTG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="etMaTG"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etTenTG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="etTenTG"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etDiachi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="etDiachi"
        android:inputType="textPersonName" />
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="etEmail"
        android:inputType="textPersonName" />

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnThemTG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Them" />

        <Button
            android:id="@+id/btnSuaTG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sua" />

        <Button
            android:id="@+id/btnXoaTG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xoa" />

        <Button
            android:id="@+id/btnXemTG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem" />
    </TableRow>

    <GridView
        android:id="@+id/gvTG"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="4"/>

</LinearLayout>